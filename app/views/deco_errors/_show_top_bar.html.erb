  <%= link_to folder_path(id: @folder.id), remote: true do %>
    <%= image_tag("chevron-left.svg", class: "icon white") %>
  <% end %>
  <h1 class="white"> 
    <%= @deco_error.title %>
  </h1>
</div>
<div class="top-bar-modals">
    <%= render "/deco_errors/new" %>
    <%= render partial: "/shared/modal", 
               locals: {modal_id: "new-filter",
                        form_id: "new-filter-form",
                        title: "Create filter",
                        form_path: "filters/new",
                        form_params: @new_filter_form_params} %>
</div>